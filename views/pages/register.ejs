<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CASI || Homepage</title>
    <link rel="stylesheet" href="/css/style.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
      .card-body {
        color: black;
      }
      a {
        text-decoration: none !important;
      }
    </style>
  </head>
  <body>
    <%- include('../layouts/navbar.ejs'); %>
    <div class="register">
      <h1>Register</h1>
      <br />
      <form class="needs-validation" novalidate>
        <div class="form-row">
          <div class="col-md-4 mb-3">
            <label for="validationCustom01">Nama Depan</label>
            <input
              type="text"
              class="form-control"
              id="validationCustom01"
              placeholder="Nama Depan"
              required
            />
            <div class="invalid-feedback">Isi nama depan dengan benar</div>
          </div>
          <br />
          <div class="col-md-4 mb-3">
            <label for="validationCustom02">Nama Belakang</label>
            <input
              type="text"
              class="form-control"
              id="validationCustom02"
              placeholder="Nama Belakang"
              required
            />
            <div class="invalid-feedback">Isi nama belakang dengan benar</div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationCustomPhoneNumber">No. Handphone</label>
            <input
              type="text"
              class="form-control"
              id="validationCustomPhoneNumber"
              placeholder="No. HP"
              required
            />
            <div class="invalid-feedback">Isi no.hp dengan benar</div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationCustomBirthDate">Tanggal Lahir</label>
            <input
              type="date"
              class="form-control"
              id="validationCustomBirthDate"
              required
            />
            <div class="invalid-feedback">Isi tanggal lahir dengan benar</div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationCustomEmail">Email</label>
            <input
              type="email"
              class="form-control"
              id="validationCustomEmail"
              placeholder="example@gmail.com"
              required
            />
            <div class="invalid-feedback">Isi email dengan benar</div>
          </div>
          <div class="col-md-4 mb-3">
            <label for="validationCustomPassword">Password</label>
            <input
              type="password"
              class="form-control"
              id="validationCustomPassword"
              minlength="8"
              placeholder="********"
              required
            />
            <div class="invalid-feedback">Isi password minimal 8 karakter</div>
          </div>
          <div class="form-group">
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="invalidCheck"
                required
              />
              <label class="form-check-label" for="invalidCheck">
                Agree to terms and conditions
              </label>
              <div class="invalid-feedback">
                You must agree before submitting.
              </div>
            </div>
          </div>
        </div>
        <button class="btn btn-primary" type="submit">Register</button>
      </form>
    </div>
    <%- include('../layouts/footer.ejs'); %>
    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (function () {
        "use strict";
        window.addEventListener(
          "load",
          function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName("needs-validation");
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(
              forms,
              function (form) {
                form.addEventListener(
                  "submit",
                  function (event) {
                    if (form.checkValidity() === false) {
                      event.preventDefault();
                      event.stopPropagation();
                    }
                    form.classList.add("was-validated");
                  },
                  false
                );
              }
            );
          },
          false
        );
      })();
    </script>
  </body>
</html>
